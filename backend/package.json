{
  "name": "@flowguard/backend",
  "version": "0.1.0",
  "description": "FlowGuard backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "deploy:chipnet": "node src/scripts/simple-deploy.mjs",
    "verify:contract": "node src/scripts/verify-contract.mjs",
    "check:funding": "node src/scripts/check-funding.mjs",
    "register:vault": "node src/scripts/register-vault.mjs",
    "deploy:chipnet:legacy": "NODE_OPTIONS='--no-warnings --experimental-loader ./node_modules/tsx/dist/esm/index.mjs' node --loader tsx/esm src/scripts/deploy-chipnet.ts || tsx src/scripts/deploy-chipnet.ts",
    "verify:deployment": "tsx src/scripts/verify-deployment.ts"
  },
  "dependencies": {
    "@bitauth/libauth": "^3.0.0",
    "@types/uuid": "^11.0.0",
    "better-sqlite3": "^12.4.1",
    "cashscript": "^0.10.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mainnet-js": "^2.7.31",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
